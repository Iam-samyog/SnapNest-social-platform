{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://<YOUR_RENDER_URL>/api/:path*"
    },
    {
      "source": "/media/:path*",
      "destination": "https://<YOUR_RENDER_URL>/media/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
